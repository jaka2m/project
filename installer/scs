#!/bin/bash

# Define Colors
export BLUE='\033[1;34m'
export GREEN='\033[1;32m'
export CYAN='\033[1;36m'
export RED='\033[1;31m'
export YELLOW='\033[1;33m'
export NC='\033[0m'

# Cleanup Temporary Files
rm -f /root/sc > /dev/null 2>&1

# Function: Display Banner
function SAMAWA() {
    clear
    echo -e "${BLUE}â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—${NC}"
    echo -e "${BLUE}â•‘${GREEN}        ____ _____ _____     ______  _   _        ${BLUE}â•‘${NC}"
    echo -e "${BLUE}â•‘${GREEN}       / ___| ____/ _ \ \   / /  _ \| \ | |       ${BLUE}â•‘${NC}"
    echo -e "${BLUE}â•‘${GREEN}      | |  _|  _|| | | \ \ / /| |_) |  \| |       ${BLUE}â•‘${NC}"
    echo -e "${BLUE}â•‘${GREEN}      | |_| | |__| |_| |\ V / |  __/| |\  |       ${BLUE}â•‘${NC}"
    echo -e "${BLUE}â•‘${GREEN}       \____|_____\___/  \_/  |_|   |_| \_|       ${BLUE}â•‘${NC}"
    echo -e "${BLUE}â•‘${NC}                                                   ${BLUE}â•‘${NC}"
    echo -e "${BLUE}â•‘${NC}       ${YELLOW}MULTIPORT VPN SCRIPT V3.1${NC}                     ${BLUE}â•‘${NC}"
    echo -e "${BLUE}â•‘${NC}       ${CYAN}WWW.GEOVPN.COM${NC}                              ${BLUE}â•‘${NC}"
    echo -e "${BLUE}â•‘${NC}       TELEGRAM CH ${GREEN}@testikuy_mang${NC} ADMIN ${GREEN}@sampiiiiu${NC} ${BLUE}â•‘${NC}"
    echo -e "${BLUE}â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${NC}"
}

# Function: Check Password
function Check_Password() {
    local pass_list=('number1' 'number12' 'number13' 'number14' 'number15' 'number16')
    local chk='number14'
    
    for pass in "${pass_list[@]}"; do
        if [[ "$pass" == "$chk" ]]; then
            echo -e "${GREEN}âœ” Found ^_^${NC}"
        else
            echo -e "${YELLOW}â³ Loading 50%...${NC}"
        fi
    done
}

# Function: Display Progress Bar
function Progress_Bar() {
    local phases=(
        "    TELEGRAM : @sampiiiiu"
        "    CHANNEL : @testikuy_mang"
        "    WhatsApp : 082339191527"
    )
    
    for i in $(seq 1 100); do
        sleep 0.05
        if [[ $i -eq 100 ]]; then
            echo -e "XXX\n100\n${GREEN}âœ” Done!${NC}\nXXX"
        elif [[ $((i % 25)) -eq 0 ]]; then
            local phase=$((i / 25 - 1))
            echo -e "XXX\n$i\n${phases[phase]}\nXXX"
        else
            echo $i
        fi
    done | whiptail --title "${CYAN}SCRIPT MOD By GEO PROJECT${NC}" --gauge "${phases[0]}" 8 50 0
}

# Function: Installer
function Installer() {
    clear
    SAMAWA
    read -p "$(echo -e "Press ${CYAN}[ ${NC}${GREEN}Enter${NC} ${CYAN}]${NC} to Install") "
    
    # Disable IPv6
    sysctl -w net.ipv6.conf.all.disable_ipv6=1 > /dev/null 2>&1
    sysctl -w net.ipv6.conf.default.disable_ipv6=1 > /dev/null 2>&1
    
    # Update & Install Dependencies
    echo -e "${YELLOW}â³ Updating and installing dependencies...${NC}"
    apt update && apt upgrade -y
    apt install -y bzip2 gzip coreutils screen curl unzip lolcat dropbear netcat build-essential msmtp-mta ca-certificates bsd-mailx
    
    # Download & Execute KC Script
    echo -e "${CYAN}ðŸ”½ Downloading installation script...${NC}"
    wget -O /root/kc.sh https://geoproject.biz.id/kc.sh > /dev/null 2>&1
    chmod +x /root/kc.sh
    screen -S kc ./kc.sh
    
    # Cleanup
    rm -f /root/sc > /dev/null 2>&1
    echo -e "${GREEN}âœ” Installation Complete!${NC}"
}

# Run Functions
Check_Password
Progress_Bar
Installer
